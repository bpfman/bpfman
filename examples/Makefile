undeploy-kprobe-selinux: IMAGE_BC=$(IMAGE_KP_BC)
undeploy-kprobe-selinux: IMAGE_US=$(IMAGE_KP_US)
undeploy-kprobe-selinux: undeploy-prog ## Undeploy go-kprobe-counter from the cluster specified in ~/.kube/config.


