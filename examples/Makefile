undeploy-tc: CONFIG_DIR=default/$(PROG_NAME)
undeploy-tc: IMAGE_BC=$(IMAGE_TC_BC)
undeploy-tc: IMAGE_US=$(IMAGE_TC_US)
undeploy-tc: undeploy-prog ## Undeploy go-tc-counter from the cluster specified in ~/.kube/config.


