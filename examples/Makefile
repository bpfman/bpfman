deploy-tc: CONFIG_DIR=default/$(PROG_NAME)
deploy-tc: IMAGE_BC=$(IMAGE_TC_BC)
deploy-tc: IMAGE_US=$(IMAGE_TC_US)
deploy-tc: deploy-prog ## Deploy go-tc-counter to the cluster specified in ~/.kube/config.

.PHONY: undeploy-tc
